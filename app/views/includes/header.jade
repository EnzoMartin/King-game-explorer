head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    block title
        title #{title} - #{headline}
    meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
    link(rel='shortcut icon' href='favicon.ico?')

    link(rel='stylesheet', href=rel + 'css/bootstrap' + ext + '.css')
    link(rel='stylesheet', href=rel + 'css/font-awesome' + ext + '.css')
    link(rel='stylesheet', href=rel + 'css/structure' + ext + '.css')

    block templates
        if loadAllTemplates
            include ../templates